<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.kamilkirstein.indexcards.ui.ShowIndexCardCategoriesFrg"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_showCardCategories"/>
    <fragment
        android:id="@+id/editIndexCard"
        android:name="com.kamilkirstein.indexcards.ui.EditIndexCardFrg"
        android:label="fragment_edit_index_card"
        tools:layout="@layout/fragment_edit_index_card" >
        <argument
            android:name="cardName"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <action
        android:id="@+id/action_global_editIndexCard"
        app:destination="@id/editIndexCard" />
</navigation>