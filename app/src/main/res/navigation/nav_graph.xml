<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/showIndexCardCategoriesFrg">

    <fragment
        android:id="@+id/editIndexCard"
        android:name="com.kamilkirstein.indexcards.ui.EditIndexCardFrg"
        android:label="fragment_edit_index_card"
        tools:layout="@layout/fragment_edit_index_card" >
        <argument
            android:name="cardName"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <action
        android:id="@+id/action_global_editIndexCard"
        app:destination="@id/editIndexCard"
        app:enterAnim="@anim/fragment_open_enter"
        app:exitAnim="@anim/fragment_open_exit"
        app:popUpTo="@id/nav_graph"
        app:popUpToInclusive="false" />
    <fragment
        android:id="@+id/showIndexCardCategoriesFrg"
        android:name="com.kamilkirstein.indexcards.ui.ShowIndexCardCategoriesFrg"
        android:label="fragment_show_card_categories"
        tools:layout="@layout/fragment_show_card_categories" />
    <fragment
        android:id="@+id/editIndexCardFrgChild"
        android:name="com.kamilkirstein.indexcards.ui.EditIndexCardFrgChild"
        android:label="fragment_edit_index_card_frg_child"
        tools:layout="@layout/fragment_edit_index_card_frg_child" />
</navigation>