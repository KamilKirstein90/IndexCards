<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.kamilkirstein.indexcards.ui.ShowIndexCardCategoriesFrg"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
        <action
            android:id="@+id/action_FirstFragment_to_editIndexCard"
            app:destination="@id/editIndexCard"
            app:enterAnim="@anim/card_flip_right_in"
            app:exitAnim="@anim/card_flip_right_out"
            app:popEnterAnim="@anim/card_flip_left_in"
            app:popExitAnim="@anim/card_flip_left_out" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.kamilkirstein.indexcards.ui.ShowIndexCardsFrg"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
        <action
            android:id="@+id/action_SecondFragment_to_editIndexCard"
            app:destination="@id/editIndexCard" />
    </fragment>
    <fragment
        android:id="@+id/editIndexCard"
        android:name="com.kamilkirstein.indexcards.ui.EditIndexCardFrg"
        android:label="fragment_edit_index_card"
        tools:layout="@layout/fragment_edit_index_card" >
        <action
            android:id="@+id/action_editIndexCard_to_FirstFragment"
            app:destination="@id/FirstFragment" />
        <argument
            android:name="cardName"
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/action_editIndexCard_to_editIndexCardFrgChild"
            app:destination="@id/editIndexCardFrgChild"
            app:enterAnim="@anim/card_flip_left_in"
            app:exitAnim="@anim/card_flip_left_out"
            app:popEnterAnim="@anim/card_flip_right_in"
            app:popExitAnim="@anim/card_flip_right_out" />
    </fragment>
    <fragment
        android:id="@+id/editIndexCardFrgChild"
        android:name="com.kamilkirstein.indexcards.ui.EditIndexCardFrgChild"
        android:label="fragment_edit_index_card_frg_child"
        tools:layout="@layout/fragment_edit_index_card_frg_child" >
        <argument
            android:name="swichtAQ"
            app:argType="string" />
    </fragment>
</navigation>