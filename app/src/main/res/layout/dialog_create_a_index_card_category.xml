<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cV_indexCard_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:shape="ring"
        app:cardCornerRadius="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:strokeColor="@color/orange"
        app:strokeWidth="2dp"
        android:padding="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <TextView
                android:id="@+id/tV_CategoryNameDlgLbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="24dp"
                android:text="Category name:"
                android:textSize="24sp"
                app:layout_constraintBottom_toTopOf="@+id/btn_dlgCreateCategorySave"
                app:layout_constraintEnd_toStartOf="@+id/et_dlg_CategoryName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_dlgCreateCategorySave"
                android:layout_width="98dp"
                android:layout_height="50dp"
                android:layout_marginStart="24dp"
                android:text="Save"
                app:layout_constraintBaseline_toBaselineOf="@+id/btn_dlgCreateCategoryCancel"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/btn_dlgCreateCategoryCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="108dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="24dp"
                android:text="Cancle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/btn_dlgCreateCategorySave"
                app:layout_constraintTop_toBottomOf="@+id/et_dlg_CategoryName" />

            <EditText
                android:id="@+id/et_dlg_CategoryName"
                android:layout_width="187dp"
                android:layout_height="44dp"
                android:layout_marginEnd="24dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name"
                app:layout_constraintBaseline_toBaselineOf="@+id/tV_CategoryNameDlgLbl"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.226"
                app:layout_constraintStart_toEndOf="@+id/tV_CategoryNameDlgLbl" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>



</androidx.constraintlayout.widget.ConstraintLayout>